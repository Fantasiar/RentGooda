            <location>/Users/LingHanchen/Desktop/ideaProjects/RentGooda/web/Pictures</location>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>GoodsManage</servlet-name>
        <url-pattern>/addGoods</url-pattern>
        <url-pattern>/home</url-pattern>
        <url-pattern>/showItem</url-pattern>
        <url-pattern>/Query</url-pattern>
        <url-pattern>/Search</url-pattern>

    </servlet-mapping>
    <servlet>
